<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.dickycn.plesirapp.profil.profilTab"
    android:layout_marginTop="50dp">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/Prof_section"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <ImageView
            android:id="@+id/prof_pict"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="your email"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="your name display here"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/idGmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="your ID gmail display here"
            android:textAlignment="center" />

        <Button
            android:id="@+id/bn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log Out Account" />

        <!--<Button-->
            <!--android:id="@+id/bn_revoke"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Revoke Google Account" />-->

    </LinearLayout>
</RelativeLayout>
